.para-text.content-text(
(mouseup)='onMouseup($event,"content")',
(keyup)='onKeyup($event,"content")',
(contextmenu)='onContextmenu($event,"content")',
[attr.contenteditable]='editable',
spellcheck='false', #contentText='')
.para-text.trans-text([hidden]='!showTrans',
(mouseup)='onMouseup($event,"trans")',
(keyup)='onKeyup($event,"trans")',
(contextmenu)='onContextmenu($event,"trans")',
[attr.contenteditable]='editable',
spellcheck='false', #transText='')
.ui.right.rail(*ngIf='beenChanged')
  .ui.list([hidden]='!gotFocus')
    .ui.item
      button.ui.mini.primary.basic.button((click)='notifySave()', [ngClass]='{disabled: !contentChanged&&!transChanged}')
        i.checkmark.icon
        | 保存
    .ui.item
      button.ui.mini.primary.basic.button((click)='discard()', [ngClass]='{disabled: !contentChanged&&!transChanged}')
        i.undo.icon
        | 撤销
ng-template(#wordAnnos='')
ng-template(#wordMeanings='')
