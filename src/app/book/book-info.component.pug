//.ui.small.header
  | 详情 - {{book.code}}

.ui.content(*ngIf='book')
  .ui.unstackable.definition.table
    tr
      td 英文
      td
        .book-name {{book.name}}
        .author
          span.author-by by
          | {{book.author}}
    tr
      td 中文
      td(*ngIf='book.zhName')
        .book-name {{book.zhName}}
        .author(*ngIf='book.zhAuthor')
          span.author-by by
          | {{book.zhAuthor}}
    tr
      td 基本
      td.props
        .prop
          span.prop-name 代号
          | {{book.code}}
        .prop
          span.prop-name 分类
          | {{book.category}}
        .prop
          span.prop-name 状态
          | {{book.status}}
    tr
      td 说明
      td {{book.description}}
    tr
      td.two.wide.column 定价
      td {{book.isFree? '免费':book.price}}
    tr
      td.two.wide.column 标签
      td {{book.tags}}
    tr
      td.two.wide.column 推荐语
      td {{book.slogan}}
    tr
      td.two.wide.column 编辑人员
      td {{book.editorName}}

.actions
  button.ui.tiny.button((click)="close()", autofocus='') 关闭
